{{ define "Index" }}
  {{ template "Header" }}
    {{ template "Menu"  }}
    <h2> Registered actions </h2>
  
    <table border="1">
      <thead>
      <tr>
        
        <td>ActionID</td>
        
        <td>ActionName</td>
        
        <td>ActionType</td>
        
        <td>Description</td>
        
        <td>CreatedAt</td>
        
        <td>UpdatedAt</td>
        
        <td>View</td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
       </thead>
       <tbody>
    {{ range . }}
      <tr>
        
        <td>{{ .ActionID }}</td>
        
        <td>{{ .ActionName }}</td>
        
        <td>{{ .ActionType }}</td>
        
        <td>{{ .Description }}</td>
        
        <td>{{ .CreatedAt }}</td>
        
        <td>{{ .UpdatedAt }}</td>
        
        <td><a href="/showactions?id={{ .ActionID }}" class="btn btn-primary">View</a></td>
        <td><a href="/editactions?id={{ .ActionID }}" class="btn btn-secondary">Edit</a></td>
        <td><a href="/deleteactions?id={{ .ActionID }}" class="btn btn-danger">Delete</a><td>
      </tr>
    {{ end }}
       </tbody>
    </table>
  {{ template "Footer" }}
{{ end }}